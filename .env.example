# Environment Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True

# Application Settings
SECRET_KEY=your-secret-key-here
HOST=0.0.0.0
PORT=5000

# Remote Docker Host Settings
REMOTE_HOST=localhost
REMOTE_USER=user
SSH_KEY_PATH=~/.ssh/id_rsa
DOCKER_HOST=unix:///var/run/docker.sock

# Glances API Configuration
GLANCES_HOST=localhost
GLANCES_PORT=108
GLANCES_API_VERSION=3

# Service Configuration
SERVICES_CONFIG_PATH=./config/services.json
UPDATE_INTERVAL=5

# Security Settings
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=changeme
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=dashboard.log

# Docker Hub Settings (for deployment)
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=falkoro/docker-dashboard
DOCKER_IMAGE_TAG=latest
